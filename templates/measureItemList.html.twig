
{% import 'components/form/fields_macros.html.twig' as fields %}  
<div class="card-body d-flex flex-wrap">
   <div class="col-12 col-xxl-{{ item_has_pictures ? '9' : '12' }} flex-column">
      {{ include('components/form/header.html.twig', {params: {target: '/plugins/tender/front/measureitem.form.php'}}) }}
      <div class="d-flex flex-row flex-wrap flex-xl-nowrap mb-2">
         <div class="row flex-row align-items-start flex-grow-1">
            <div class="row flex-row">

               {{ fields.numberField(
                  'value',
                  0,
                  __('Value', 'tender'),
                  {
                  'step' : "1",
                  'min': '0'
                  }
               ) }}

               {{ fields.dropdownArrayField(
                  'plugin_tender_costcenters_id',
                  '',
                  costcenters,
                  __('Financial', 'tender'),
               ) }}

               {{ fields.hiddenField(
                     'plugin_tender_measures_id',
                     item.fields['id']
                  ) }}
               <div>
                  <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}" />
                  <button class="btn btn-primary me-2" type="submit" name="add" value="1">
                     <i class="fas fa-plus"></i>
                     <span>{{ _x('button', 'Add') }}</span>
                  </button>
               </div>
            </div>
         </div>
      </div>
      <hr />
      {{ include('@tender/components/table.html.twig') }}
   </div>
</div>
