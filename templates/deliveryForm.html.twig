{{ include('components/form/header.html.twig', {params: {target: '/plugins/tender/front/delivery.form.php'}}) }}
{% import 'components/form/fields_macros.html.twig' as fields %}
   <div class="card-body d-flex flex-wrap">
      <div class="col-12 col-xxl-{{ item_has_pictures ? '9' : '12' }} flex-column">
         <div class="d-flex flex-row flex-wrap flex-xl-nowrap">
            <div class="row flex-row align-items-start flex-grow-1">
               <div class="row flex-row">

                     {{ fields.textField(
                        'delivery_reference',
                        delivery.delivery_reference,
                        __('Delivery Reference'),
                     ) }}

                     {{ fields.dateField(
                           'delivery_date',
                           delivery.delivery_date,
                           __('Delivery Date'),
                           {
                              'required': true
                           }
                     ) }}
                     {{ fields.hiddenField(
                           'tenders_id',
                           tenders_id
                     ) }}                   
                     {{ fields.hiddenField(
                           'id',
                           delivery.id
                     ) }}         
               <div>
                  <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}" />
               {% if delivery is not empty %}
                  <button class="btn btn-primary me-2" type="submit" name="update" value="1">
                     <i class="fas fa-save"></i>
                     <span>{{ _x('button', 'Save') }}</span>
                  </button>
                  <button class="btn btn-outline-warning me-2" type="submit" name="delete" value="1">
                     <i class="fas fa-trash"></i>
                     <span>{{ _x('button', 'Delete permanently') }}</span>
                  </button>
               {% endif %}
               </div>
         </div>
      </div>
   </div>
   <div class="col-12 col-xxl-{{ item_has_pictures ? '9' : '12' }} flex-column">
      <hr />
      {{ include('@tender/components/table.html.twig') }}
   </div>
</div>