{% extends "generic_show_form.html.twig" %}
{% import 'components/form/fields_macros.html.twig' as fields %}
{% set params  = params ?? [] %}

{% block more_fields %}

   {{ fields.dropdownField(
      'Entity',
      'entities_id',
      item.fields['entities_id'],
      __('Entity')
   ) }}

   {{ fields.dropdownArrayField(
      'plugin_tender_costcenters_id',
      item.fields['plugin_tender_costcenters_id'],
      costcenters,
      __('Costcenter', "tender"),
      {
         'disabled': false
      }
   ) }}

   {{ fields.dropdownArrayField(
      'plugin_tender_accounts_id',
      item.fields['plugin_tender_accounts_id'],
      accounts,
      __('Account', "tender"),
      {
         'disabled': false
      }
   ) }}

   {{ fields.textField(
      'total',
      total|number_format(2, ',', '.'),
      __('Total', "tender"),
      {
         'disabled': false
      }
   ) }}
{% endblock %}
